<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/CreatePost"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".CreatePostActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60px"
        android:layout_marginBottom="0dp"
        android:orientation="horizontal"
        android:paddingLeft="20px">

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="30px"
            android:layout_height="30px"
            android:layout_gravity="center_vertical"
            android:src="@drawable/baseline_arrow_back_ios_black_18dp"></ImageView>

        <LinearLayout
            android:layout_width="500px"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="200px"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="40px"
                android:text="Create Post"
                android:textColor="#000"
                android:textSize="20px"></TextView>

            <TextView
                android:layout_width="200px"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="140px"
                android:text="POST"
                android:textColor="@color/blue"
                android:textSize="20px"></TextView>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginTop="0dp"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:paddingLeft="50px"
        android:paddingTop="50px">

        <ImageButton
            android:id="@+id/avatar"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/imageavatar" />

        <LinearLayout
            android:layout_width="400px"
            android:layout_height="52dp"
            android:orientation="vertical"
            android:paddingLeft="30px">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Luu Quy Nhon"
                android:textColor="@color/black"></TextView>

            <Button
                android:layout_width="96dp"
                android:layout_height="32dp"
                android:backgroundTint="@color/white"
                android:text="Public"
                android:textColor="@color/black"
                android:textSize="10dp"></Button>
        </LinearLayout>
    </LinearLayout>

    <EditText
        android:id="@+id/editable"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:hint="What are you thinking of..?"
        android:inputType="text"
        android:paddingLeft="50px"></EditText>

    <Button
        android:id="@+id/upload"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text="Upload" />
</LinearLayout>